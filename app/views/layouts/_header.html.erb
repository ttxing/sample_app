<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<%= link_to (t :app_name), root_path, id: "logo" %>
		<nav>
			<ul class="nav navbar-nav">
				<li>
					<%= link_to (t :home), root_path %>
				</li>
				<li>
					<%= link_to (t :help), help_path %>
				</li>
				<% if logged_in? %>
				<li>
					<li><%= link_to (t :users), users_path %></li>
				</li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= t :account %> <b class="caret"></b> </a>
					<ul class="dropdown-menu">
						<li>
							<%= link_to "Profile", current_user %>
						</li>
						<li>
							<li><%= link_to "Settings", edit_user_path(current_user) %></li>
						</li>
						<li class="divider"></li>
						<li>
							<%= link_to (t :log_out), logout_path, method: "delete" %>
						</li>
					</ul>
				</li>
				<% else %>
				<li>
					<%= link_to (t :log_in), login_path %>
				</li>
				<% end %>
			</ul>
		</nav>		
	</div>
</header>